%tr[ticker]{:class => cycle('list-line-even', 'list-line-odd')}
  %td.symbol
    = h ticker.symbol
  %td.exchange_id
    = lkup ticker.exchange, 'symbol'
  %td.listing
    = h ticker.name
  %td.sector_id
    = lkup ticker.sector
  %td.industry_id
    = lkup ticker.industry
  %td.flags
    = format_flags(ticker)
  %td.retr_count
    = h ticker.retry_count
  %td.listing
    = link_to 'Listing', :controller => 'current_listing', :action => 'show', :ticker_id => ticker.id
  %td.show
    = link_to 'Show', object_path(ticker)
  %td.edit
    = link_to 'Edit', edit_object_path(ticker)
  %td.destroy
    = link_to 'Destroy', object_path(ticker), :confirm => 'Really destroy ticker?', :method => :delete
